{
    "name": "@ns-lab-klx/main-app",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "targets": {
        "serve": {
            "executor": "@nx/vite:dev-server",
            "defaultConfiguration": "development",
            "options": {
                "buildTarget": "@ns-lab-klx/main-app:build"
            },
            "configurations": {
                "development": {
                    "buildTarget": "@ns-lab-klx/main-app:build:development",
                    "hmr": true
                },
                "production": {
                    "buildTarget": "@ns-lab-klx/main-app:build:production",
                    "hmr": false
                }
            }
        },
        "build": {
            "executor": "@nx/vite:build",
            "outputs": ["{options.outputPath}"],
            "defaultConfiguration": "production",
            "options": {
                "outputPath": "apps/main-app/dist"
            },
            "configurations": {
                "development": {
                    "mode": "development"
                },
                "production": {
                    "mode": "production"
                }
            }
        },
        "preview": {
            "dependsOn": ["build"],
            "executor": "@nx/vite:preview-server",
            "defaultConfiguration": "development",
            "options": {
                "buildTarget": "@ns-lab-klx/main-app:build"
            },
            "configurations": {
                "development": {
                    "buildTarget": "@ns-lab-klx/main-app:build:development"
                },
                "production": {
                    "buildTarget": "@ns-lab-klx/main-app:build:production"
                }
            }
        }
    }
}
